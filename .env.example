# CodeRAG Environment Configuration
# Copy this file to .env and fill in your actual values

# ===== REQUIRED =====

# Google Gemini API Key (required for AI features)
# Get yours at: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# ===== OPTIONAL =====

# Authentication Security
# Generate a strong secret key for JWT tokens
# Use: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=supersecretkey_change_me_in_prod

# CORS Configuration
# Comma-separated list of allowed origins, or "*" for all
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173

# Local LLM Configuration (Alternative to Google Gemini)
# Set to "true" to use Ollama instead of Google Gemini
USE_LOCAL_LLM=false
LOCAL_LLM_MODEL=llama3
LOCAL_EMBEDDING_MODEL=nomic-embed-text

# Rate Limiting (requests per minute)
CHAT_RATE_LIMIT=10
INGEST_RATE_LIMIT=5

# Database Configuration
# Default uses SQLite, can be changed to PostgreSQL for production
# SQL_ALCHEMY_DATABASE_URL=sqlite:///./coderag.db
# SQL_ALCHEMY_DATABASE_URL=postgresql://user:password@localhost/coderag

# Logging Level
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
